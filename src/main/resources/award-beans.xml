    <!-- награда за возврат в игру -->
    <bean id="comebackBonusSettings" class="com.pragmatix.app.settings.ComebackBonusSettings">
        <property name="name" value="comebackBonusSettings"/>
        <property name="absetDays" value="${comebackBonusSettings.absetDays:21}"/>
        <property name="money" value="300"/>
        <property name="realMoney" value="3"/>
        <property name="reactionRate" value="15"/>
        <property name="reagentsCount" value="15"/>
        <property name="reagentsMassStr" value="0 0:112 1:112 2:112 4:112 3:112 6:112 9:112 10:112 20:50 21:50 22:50 23:50 24:50 26:50 40:20 41:20 42:20 43:20 44:20"/>
    </bean>

    <!-- награда за возвращенного в игру друга-->
    <bean id="comebackCallerBonus" class="com.pragmatix.app.settings.GenericAward">
        <property name="name" value="comebackCallerBonus"/>
        <property name="money" value="150"/>
        <property name="reactionRate" value="3"/>
        <property name="reagentsCount" value="5"/>
        <property name="reagentsMassStr" value="0 0:112 1:112 2:112 4:112 3:112 6:112 9:112 10:112 20:50 21:50 22:50 23:50 24:50 26:50 40:20 41:20 42:20 43:20 44:20"/>
    </bean>

